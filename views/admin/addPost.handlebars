{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<h2>Cadastrando Post</h2>
<div class="card">
    <div class="card-body">
        <form action="/admin/posts/novo" method="post">
            <label for="titulo">Título</label>
            <input type="text" name="titulo" class="form-control">
            <label for="slug">Slug</label>
            <input type="text" name="slug" class="form-control">
            <label for="descricao">Descrição</label>
            <input type="text" name="descricao" class="form-control">
            <label for="categoria">Categoria</label>
            <select name="categoria" class="form-control">
                <option value="">Selecione uma Categoria</option>
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="">Nenhuma Categoria Cadastrada</option>
                {{/each}}
            </select>

            <label for="conteudo">Conteúdo</label>
            <textarea name="conteudo" id="conteudo" rows="5" class="form-control"></textarea>
            <br>
            <button type="submit" class="btn btn-success md-4">Salvar</button>
            <a href="/admin/posts"><button type="button" class="btn btn-primary">Cancelar</button></a>
        </form>
    </div>
</div>