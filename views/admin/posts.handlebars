<h2>Lista de Posts</h2>
<hr>
<a href="/admin/posts/add"><button class="btn btn-success">Novo Registro</button></a>

{{#each posts}}
    <div class="card mt-2">
        <div class="card-body">
            <h4>{{titulo}}</h4>
            <p>Descrição: {{descricao}}</p>
            <small>Slug: {{slug}}</small>
            <br>
            <small>Categoria: {{categoria.nome}}</small>
            <br>
            <small>Data de Criação: {{date}}</small>
            <br>
            <a href="/admin/posts/edit/{{_id}}"><button class="btn btn-warning md-2">Editar</button></a>
            <a href="/admin/posts/delete/{{_id}}"><button class="btn btn-danger md-2">Deletar</button></a>
        </div>
    </div>
{{else}}
    <h5 class="mt-2">Nenhum Post Cadastrado</h5>
{{/each}}