<h1>{{categoria.nome}}</h1>
{{#each posts}}
    <div class="card mt-4">
        <div class="card-body">
            <h3>{{titulo}}</h3>
            <p>{{descricao}}</p>
            <a href="/post/{{slug}}"><button class="btn btn-success">Leia Mais</button></a>
            <hr>
            <br>
            <small>Data de Publicação: {{date}}</small>
        </div>
    </div>
{{else}}
    <h5>Nenhuma Postagem Cadastrada</h5>
{{/each}}